{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "generator:ninja",
            "hidden": true,
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "generator:msbuild",
            "hidden": true,
            "generator": "Visual Studio 17 2022",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },

        {
            "name": "build:debug",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "NOTSA_DEBUG": "1"
            },
            "binaryDir": "${sourceDir}/bin/debug"
        },
        {
            "name": "build:release-with-symbols",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            },
            "binaryDir": "${sourceDir}/bin/release"
        },
        {
            "name": "build:release-no-symbols",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            },
            "binaryDir": "${sourceDir}/bin/release"
        },


        {
            "name": "arch:windows-x86",
            "hidden": true,
            "architecture": {
                "value": "x86",
                "strategy": "external"
            },
        },


        {
            "name": "compiler:msvc-cl",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl",
                "CMAKE_CXX_COMPILER": "cl"
            }
        },

        {
            "name": "use-tracy",
            "hidden": true,
            "cacheVariables": {
                "TRACY_STATIC": "ON",
                "TRACY_ENABLE": "ON",
                "TRACY_ON_DEMAND": "ON",
                "TRACY_CALLSTACK": "ON"
            }
        },

        {
            "name": "Debug|Windows|x86|Tracy",
            "description": "Windows Debug build, x86, with tracy and symbols",
            "inherits": [
                "generator:msbuild",
                "compiler:msvc-cl",
                "arch:windows-x86",
                "build:debug",
                "use-tracy"
            ]
        },
        {
            "name": "Release|Windows|x86|Tracy",
            "description": "Windows Release build, x86, with tracy and symbols",
            "inherits": [
                "generator:msbuild",
                "compiler:msvc-cl",
                "arch:windows-x86",
                "build:release-with-symbols",
                "use-tracy"
            ]
        }
    ]
}
